@model List<Practica.EF.MVC.Models.CustomerView>

@{
    ViewBag.Title = "Customers Page";
}

<h1>Lista de Clientes</h1>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Nombre del cliente</th>
            <th scope="col">Empresa del cliente</th>
            <th scope="col">Contacto</th>
            <thscope="col"></thscope="col">
        </tr>
    </thead>

    <tbody>
        @foreach (var cliente in Model)
        {
            <tr>
                <th scope="row">@cliente.Id</th>
                <th>@cliente.Nombre</th>
                <th>@cliente.Empresa</th>
                <th>@cliente.Contacto</th>
                <td>@Html.ActionLink("Borrar", "Delete", new { id = cliente.Id })</td>
            </tr>
        }
    </tbody>

    <div>
        @Html.ActionLink("Agregar un cliente nuevo:", "Insert", "Customer")
    </div>

</table>